# Fortran compiler. Only gfortran, specifically its invocation through gcc, is
# compatible with the flags used here.
FC = $(or $(RESTRAINED_ESP_FIT_RESP_COMPILER_OVERRIDE),gcc)

FLAGS = -c -O2 -v
# -mcmodel=medium
# option for gfortran
# allows handling of a larger number of MEP on 64 bit system
# FLAGS = -c -mcmodel=medium -O2

OBJS= resp.o
SRCS= resp.f
LIB= shared_variables.h

resp:	$(OBJS)
	# -lm is needed on Linux per https://gcc.gnu.org/bugzilla/show_bug.cgi?id=46539#c3
	$(FC) $^ -l:libgfortran.a -l:libquadmath.a -lm -o resp

$(OBJS): $(SRCS) $(LIB)
	$(FC) $(FLAGS) $(SRCS)

clean:
	rm -rf $(OBJS) resp

